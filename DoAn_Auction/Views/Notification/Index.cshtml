@section title
{
    Thông báo
}
@section waiting
{
    <meta http-equiv="refresh" content="2;url=@Url.Action("Detail", "Product", new { id = ViewBag.Input })" />
}
@section css
{
    <link href="~/assets/css/bootstrap-select.css" rel="stylesheet" />
    <link href="~/assets/css/owl.carousel.css" rel="stylesheet" />
    <link href="~/assets/css/owl.theme.default.css" rel="stylesheet" />
    <link href="~/assets/css/menucate.css" rel="stylesheet" />
    
}

@section js
{
    <script src="~/assets/js/bootstrap-select.js"></script>
    <script src="~/assets/js/owl.carousel.js"></script>
    <script src="~/assets/js/mimity.js"></script>
<script type="text/javascript">
    $(window).load(function () {
        $('#myModal').modal('show');
    });
</script>

}
@if (ViewBag.Input == null)
{
    <div class="container m-t-3">
        <div class="row">
            <div class="col-md-9">
                <div class="title"><span>Đợi 2 giây để quay về trang chủ</span></div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container m-t-3">
        <div class="row">
            <div class="col-md-9">
                <div class="form-group">
                    <div class="alert alert-success">
                        Đặt giá thành công ! Bạn đang giữ giá cao nhất
                    </div>
                </div>
                <div class="title"><span>Đợi 2 giây để quay về trang trước</span></div>
            </div>
        </div>
    </div>
}

<!--Modal Bid-->
<div id="myModal" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Đấu giá</h4>
            </div>
            <div class="modal-body">
                <span>Đợi 2 giây để quay về trang trước</span>
            </div>
            <div class="modal-footer">
            </div>
        </div>

    </div>
</div>