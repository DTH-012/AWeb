                <div class="checkbox">
                    <label>
                        <input type="checkbox"><span> I agree with <a href="#"><u>Terms and Conditions.</u></a></span>
                    </label>
                </div>
            </div>*@
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-theme"><i class="fa fa-check"></i> Lưu thay đổi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- End My Profile Content -->

    </div>
</div>
<!-- End Main Content -->
